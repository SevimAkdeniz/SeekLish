    <script>
        document.getElementById("gorselOlustur").addEventListener("click", async () => {
            const word = document.getElementById("engWord").value.trim();
            if (!word) return alert("Önce kelimeyi gir!");

            const btn = document.getElementById("gorselOlustur");
            btn.disabled = true;
            btn.textContent = "Yükleniyor...";

            const res = await fetch(`/generate-image?word=${encodeURIComponent(word)}`);
            const data = await res.json();

            document.getElementById("preview").src = data.path;
            document.getElementById("pictureInput").value = data.path;

            btn.textContent = "Görsel Oluştur";
            btn.disabled = false;
        });
    </script>


